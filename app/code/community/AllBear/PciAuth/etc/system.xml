<?xml version="1.0"?>
<config>
    <tabs translate="label" module="allbear_pciauth">
        <allbear>
            <label>All Bear</label>
            <sort_order>100</sort_order>
        </allbear>
    </tabs>
    <sections>
        <allbear_pciauth translate="label comment" module="allbear_pciauth">
            <label>Pci Auth</label>
            <tab>allbear</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>10</sort_order>
            <groups>
                <settings>
                    <label>Settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <password_min_length>
                            <label>Passwords minimum length</label>
                            <validate>validate-digits</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </password_min_length>
                        <login_max_tries>
                            <label>The number of unsuccessful login tries to customer lock</label>
                            <validate>validate-digits</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </login_max_tries>
                        <login_tries_reset_time>
                            <label>Time interval to reset the failed login tries counter</label>
                            <comment>in minutes</comment>
                            <validate>validate-digits</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </login_tries_reset_time>
                        <lockout_effective_period>
                            <label>Lockout effective period</label>
                            <comment>in minutes</comment>
                            <validate>validate-digits</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </lockout_effective_period>
                        <account_deaction_period>
                            <label>Accounts will be deactivated if not active for more than</label>
                            <comment>in minutes</comment>
                            <validate>validate-digits</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </account_deaction_period>
                    </fields>
                </settings>
            </groups>
        </allbear_pciauth>
    </sections>
</config>